<div class="row">
  <div class="col s12">
    <div style="padding: 35px;" align="center" class="card">
      <div class="row">
        <%= link_to "New Domain", new_domain_path , class:"waves-effect waves-light btn left" %>
        <div class="card-title">
          <b>Domains</b>
          <p id="notice"><%= notice %></p>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <table class="highlight responsive-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Protocol</th>
                <th>Host</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |domain| %>
                <tr>
                  <td><%= domain.name %></td>
                  <td><%= domain.protocol %></td>
                  <td><%= domain.host %></td>
                  <td><%= link_to 'Show', domain %></td>
                  <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
                  <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col s12 center">
          <%== pagy_materialize_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
