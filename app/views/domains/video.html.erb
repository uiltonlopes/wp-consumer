<div class="row">
  <div class="col s12">
    <div style="padding: 10px;"  class="card">
      <div class="row">
        <div class="center card-title">
            <p id="notice"><%= notice %></p>
        </div>
      </div>
      <div class="row">
        <% @gallery.each do |file| %> 
          <div class="col s12 m3">
            <div class="card">
              <div class="card-image center">
                <video   width="100%" height="300" controls>
                    <source src="<%= file[:source_url] %>">
                </video>
              </div>
              <div class="card-action center">
                <%= link_to "Open", file[:source_url], target: '_blank', class:"waves-effect waves-light btn" %>
              </div>
            </div>
          </div>
        <% end %> 
      </div>
      <div class="row">
        <div class="col s6">
          <div class="pagy-materialize-nav pagination left" style="padding: 10px;">
            <ul class="pagination">
              Showing <%= @pagy.from %> to <%= @pagy.to %> of <%= @pagy.count %> entries
            </ul>
          </div>
        </div>
        <div class="col s6"  align="right">
          <%== pagy_materialize_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>