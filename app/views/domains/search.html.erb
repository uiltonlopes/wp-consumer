<div class="row">
  <div class="col s12">
    <div style="padding: 35px;" align="center" class="card">
      <div class="row">
        <div class="card-title">
          <b>File</b>
        </div>
      </div>
      <div class="row">
        <p id="notice"><%= notice %></p>
        <div class="col s12">
          <table class="highlight responsive-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>URL</th>
                <th colspan="2">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @gallery.each do |file| %>
                <tr>
                  <td><%= file[:id] %></td>
                  <td><%= file[:source_url] %></td>
                  <td><%= link_to "Open", file[:source_url], target: '_blank' %></td>
                  <td><%= link_to "Download", domain_download_file_path(@domain, url: file[:source_url]) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col s6 ">
          <div class="pagy-materialize-nav pagination left" style="padding: 10px;">
            <ul class="pagination">
              Showing <%= @pagy.from %> to <%= @pagy.to %> of <%= @pagy.count %> entries
            </ul>
          </div>
        </div>
        <div class="col s6"  align="right">
            <%== pagy_materialize_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
